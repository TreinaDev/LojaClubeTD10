<section class="container">
  <%= link_to 'Nova Categoria', new_product_category_path %>
 
 <h2>Categorias de produto</h2>
 
  <table class="table table-striped table-hover mt-4">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Status</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @product_categories&.each do |product_category| %>
        <tr>
          <td><%= product_category.name %></td>
          <td><%= product_category.active ? 'Ativado' : 'Desativado' %></td>
          <td>
            <%= link_to 'Editar', edit_product_category_path(product_category.id), class: "link-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>