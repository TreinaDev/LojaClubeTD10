<div class="container">
<%= form_with model: @product_category, data: { turbo: false } do |f| %>
  <%= render partial: 'form_errors', locals: { object: @product_category } %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.submit t(:submit), class: 'btn btn-secondary' %>
  </div>
<% end %>
</div>