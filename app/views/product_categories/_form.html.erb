  <%= form_with model: @product_category, data: { turbo: false } do |f| %>
    <div class="input-group input-group-lg mt-4">
      <%= f.label :name, class: "input-group-text fw-bold w-25" %>
      <%= f.text_field :name, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg" , autofocus: true %>
    </div>

    <div class="d-grid mt-4">
      <%= f.submit class: "mt-3 btn btn-success" %>
    </div>
  <% end %>
