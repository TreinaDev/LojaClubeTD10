<div class="container">
<%= form_with model: @product_category, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.submit t(:submit) %>
  </div>
<% end %>
</div>