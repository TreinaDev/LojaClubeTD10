<div class="container">
  <%= form_with model: promotional_campaign, data: { turbo: false } do |f| %>
    <%= render partial: 'form_errors', locals: { object: promotional_campaign } %>
    <div class="mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-2' %>
    </div>
    <div class="mb-3">
      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: 'form-control mb-2'  %>
    </div>
    <div class="mb-3">
      <%= f.label :end_date %>
      <%= f.date_field :end_date , class: 'form-control mb-2' %>
    </div>
    <div class="mb-3">
      <%= f.label :company_id %>
      <%= f.collection_select(:company_id, @companies, :id, :brand_name , { prompt: 'Selecione' }, { class: 'form-control mb-2'}) %>
    </div>
    <div class="mb-3">
      <%= f.submit 'Cadastrar', class: 'btn btn-secondary  mt-2' %>
    </div>
  <% end %>
</div>
