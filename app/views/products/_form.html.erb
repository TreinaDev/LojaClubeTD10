<div class="container">
  <%= form_with model: product, data: { turbo: false } do |f| %>
    <%= render partial: 'form_errors', locals: { object: product } %>
    <div class="mb-3">
      <%= f.label :product_images, class: 'form-label' %>
      <%= f.file_field :product_images, multiple: true, class: 'form-control', type: 'file' %>
    </div>
    <div class="mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= f.label :code %>
    <%= f.text_field :code, class: 'form-control'  %>
  </div>
    <div class="mb-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control'  %>
    </div>
    <div class="mb-3">
      <%= f.label :brand %>
      <%= f.text_field :brand, class: 'form-control'  %>
    </div>
    <div class="mb-3">
      <%= f.label :price %>
      <%= f.number_field :price , class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :product_category_id %>
      <%= f.collection_select(:product_category_id, categories, :id, :name , { prompt: 'Selecione' }, { class: 'form-control mb-2'}) %>
    </div>
    <div class="mb-3">
      <%= f.submit 'Cadastrar', class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
