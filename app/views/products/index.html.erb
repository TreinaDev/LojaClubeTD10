<section>
  <div class="container shadow p-2 mb-4 bg-body-tertiary rounded">
    <h2 class="text-center">Produtos</h2>

    <div class="d-flex justify-content-between align-items-center p-2">
      <%= link_to 'Novo Produto', new_product_path, class: 'btn btn-secondary' %>

      <% if @query.present? %>
        <%= button_to 'Ver Todos', products_path, method: :get, class: 'btn btn-secondary me-2' %>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target= "#modal-deactivate-all">
          Desativar todos
        </button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target= "#modal-reactivate-all">
          Reativar todos
        </button>

            <div class="modal fade" id="modal-deactivate-all" tabindex="-1" aria-labelledby="exampleModaLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModaLabel">Você tem certeza disso?
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="final-dea modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                      <%= button_to 'Desativar', deactivate_all_products_path(query_products: @query), method: :patch, class: 'btn btn-danger' %>
                  </div>
                </div>
              </div>
            </div>

            <div class="modal fade" id="modal-reactivate-all" tabindex="-1" aria-labelledby="exampleModaLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModaLabel">Você tem certeza disso?
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                      <%= button_to 'Reativar', reactivate_all_products_path(query_products: @query), method: :patch, class: 'btn btn-danger' %>
                  </div>
                </div>
              </div>
            </div>
      <% end %>

      <%= form_with(url: products_path, method: :get, class: "d-flex", role: "search") do |f|  %>
        <div class="input-group">
          <%= f.text_field :query_products, class: "form-control me-2", placeholder: "Buscar", autofocus: true %>
          <%= f.submit 'Filtrar', class: "btn btn-secondary btn-sm me-1" %>
        </div>
      <% end %>
    </div>

    <div class="container p-2" >
      <% if @products.any? %>
      <table class="table table-striped table-hover  mt-4 ">
        <thead>
          <tr class="text-center">
            <th><%= Product.human_attribute_name(:code) %></th>
            <th><%= Product.human_attribute_name(:name) %></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% @products.each do |product| %>
            <tr class="text-center">
              <td><%= link_to product.code, product_path(product), class: "link-secondary" %></td>
              <td><%= product.name %></td>
              <td><%= link_to 'Editar', edit_product_path(product), class: 'btn btn-outline-secondary btn-sm', id: dom_id(product) %></td>
              <% if product.active? %>
                <td><%= button_to 'Desativar', deactivate_product_path(product.id, query_products: @query), method: :patch, class: 'btn btn-outline-danger btn-sm', id: "#{product.id}_deactivate" %></td>
              <% else %>
                <td><%= button_to 'Reativar', reactivate_product_path(product.id, query_products: @query), method: :patch, class: 'btn btn-outline-danger btn-sm', id: "#{product.id}_reactivate" %></td>
              <% end %>
            </tr>

          <% end %>
        </tbody>
      </table>
      <% else %>
        <% if @query.present? %>
          <p class="text-center">Não há produtos que correspondam à busca</p>
        <% else %>
          <p class="text-center">Não existem produtos cadastrados.</p>
        <% end %>
      <% end %>
    </div>
   </div>
</section>
