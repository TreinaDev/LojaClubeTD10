<section>
  <div class="container shadow p-2 mb-4 bg-body-tertiary rounded div-max-width">
    <h2 class="text-center">Produtos</h2>
  </div>
  <div class="container div-max-width p-2">
    <%= link_to 'Cadastrar Produto', new_product_path, class: 'btn btn-secondary' %>
  </div>
  <div class="container div-max-width p-2" >
    <% if @products.any? %>
    <table class="table table-striped table-hover  mt-4 ">
      <thead>
        <tr class="text-center">
          <th><%= Product.human_attribute_name(:code) %></th>
          <th><%= Product.human_attribute_name(:name) %></th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @products.each do |product| %>
          <tr class="text-center">
            <td><%= link_to product.code, product_path(product), class: "link-secondary" %></td>
            <td><%= product.name %></td>
            <td><%= link_to 'Editar', edit_product_path(product), class: 'btn btn-outline-secondary btn-sm', id: dom_id(product) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <p class="text-center">NÃ£o existem produtos cadastrados.</p>
    <% end %>
  </div>
</section>
