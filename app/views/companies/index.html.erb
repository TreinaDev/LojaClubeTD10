<div class="container shadow p-2 mb-4 bg-body-tertiary rounded">
  <h2 class="text-center mb-4">Empresas</h2>
  <div class="container p-2" >
    <% if @companies_active.any? %>
      <h4 class="text-center mb-4">Ativas</h4>
      <table class="table table-striped table-hover  mt-4 ">
        <thead>
          <tr class="text-center">
            <th><%= Company.human_attribute_name(:corporate_name) %></th>
            <th><%= Company.human_attribute_name(:brand_name) %></th>
            <th><%= Company.human_attribute_name(:registration_number) %></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% @companies_active.each do |company| %>
            <tr class="text-center">
              <td><%= company.corporate_name%></td>
              <td><%= company.brand_name %></td>
              <td><%= company.registration_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center">Não existem empresas com status de ativas</p>
    <% end %>
  </div>
  <hr>
  <div class="container p-2" >
    <% if @companies_inactive.any? %>
    <h4 class="text-center mb-4">Inativas</h4>
      <table class="table table-striped table-hover  mt-4 ">
        <thead>
          <tr class="text-center">
            <th><%= Company.human_attribute_name(:corporate_name) %></th>
            <th><%= Company.human_attribute_name(:brand_name) %></th>
            <th><%= Company.human_attribute_name(:registration_number) %></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% @companies_inactive.each do |company| %>
            <tr class="text-center">
              <td><%= company.corporate_name%></td>
              <td><%= company.brand_name %></td>
              <td><%= company.registration_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center">Não existem empresas com status de inativas</p>
    <% end %>
  </div>
</div>