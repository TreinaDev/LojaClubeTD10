<section class="container shadow-sm p-4 my-5 bg-body-tertiary rounded">
  <h2 class="text-center mb-3">Empresas</h2>
  
  <% if @companies_active.any? || @companies_inactive.any? %>
    <div id="ativas">
      <% if @companies_active.any? %>
        <h4>Ativas</h4>
        <table class="table table-striped table-bordered mt-3">
          <thead>
            <tr class="text-center">
              <th scope="col" class="col-4"><%= Company.human_attribute_name(:corporate_name) %></th>
              <th scope="col" class="col-4"><%= Company.human_attribute_name(:brand_name) %></th>
              <th scope="col" class="col-4"><%= Company.human_attribute_name(:registration_number) %></th>
            </tr>
          </thead>
          <tbody>
            <% @companies_active.each do |company| %>
              <tr scope="row" class="text-center">
                <td><%= company.corporate_name%></td>
                <td><%= company.brand_name %></td>
                <td><%= format_cnpj(company.registration_number) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">Não existem empresas com situação ativa</p>
      <% end %>
    </div>

    <div class="mt-5" id="inativas">
      <% if @companies_inactive.any? %>
        <h4>Inativas</h4>
        <table class="table table-striped table-bordered mt-3">
          <thead>
            <tr class="text-center">
              <th scope="col" class="col-4"><%= Company.human_attribute_name(:corporate_name) %></th>
              <th scope="col" class="col-4"><%= Company.human_attribute_name(:brand_name) %></th>
              <th scope="col" class="col-4"><%= Company.human_attribute_name(:registration_number) %></th>
            </tr>
          </thead>
          <tbody>
            <% @companies_inactive.each do |company| %>
              <tr scope="row" class="text-center">
                <td><%= company.corporate_name%></td>
                <td><%= company.brand_name %></td>
                <td><%= format_cnpj(company.registration_number) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">Não existem empresas com situação inativa</p>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">Nenhuma empresa encontrada na aplicação de Gestão de Empresas</p>
  <% end %>
</section>