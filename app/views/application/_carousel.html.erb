  <div class="row">
    <% if products.any? %>
      <div>
      <div id=<%= id %> class="carousel slide p-4 mb-3" data-bs-ride="carousel">
        <div class="carousel-inner w-75 ms-auto me-auto">
        <% if products[0..2].present? %>
          <div class="carousel-item active" data-bs-interval="3000">
            <div class="row">
              <% products[0..2].each do |product| %>
                <div class= "col">
                  <div class="card" style="width: 15rem;">
                  <%= image_tag "https://picsum.photos/200", alt: "Nome do produto", class:"card-img-top", style: "width: 100%; height:100%;"%>
                    <div class="card-body">
                      <h5 class="card-title"><%= link_to product.name, root_path %></h5>
                      <p><%= product.price.round %> Pontos</p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <% end %>
          <% if products[3..5].present? %>
            <div class="carousel-item">
              <div class="row">
                <% products[3..5].each do |product| %>
                  <div class= "col">
                    <div class="card" style="width: 15rem;">
                    <%= image_tag "https://picsum.photos/200", alt: "Nome do produto", class:"card-img-top", style: "width: 100%; height:100%;"%>
                      <div class="card-body">
                        <h5 class="card-title"><%= link_to product.name, root_path %></h5>
                        <p><%= product.price.round %> Pontos</p>
                      </div>
                    </div>
                  </div>
                <% end %>    
              </div>
            </div>
          <% end %>
          <% if products[6..8].present? %>
            <div class="carousel-item">
              <div class="row">
              <% products[6..8].each do |product| %>
                  <div class= "col">
                    <div class="card" style="width: 15rem;">
                    <%= image_tag "https://picsum.photos/200", alt: "Nome do produto", class:"card-img-top", style: "width: 100%; height:100%;"%>
                      <div class="card-body">
                        <h5 class="card-title"><%= link_to product.name, root_path %></h5>
                        <p><%= product.price.round %> Pontos</p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>  
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target=<%="##{id}"%> data-bs-slide="prev", style="width: 10%">
          <span class="carousel-control-prev-icon ms-auto me-auto" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next ms-auto me-auto" type="button" data-bs-target=<%="##{id}"%> data-bs-slide="next", style="width: 10%">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <% else %>
      <h3>Nenhum produto dispon√≠vel no momento</h3>      
    <% end %>
  </div>