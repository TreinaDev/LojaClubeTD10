          <li><%= link_to("Categorias", product_categories_path, class: "dropdown-item")%></li>
          <li><%= link_to("Empresas", companies_path, class: "dropdown-item")%></li>
          <li><%= link_to("Produtos", products_path, class: "dropdown-item")%></li>
        </ul>
