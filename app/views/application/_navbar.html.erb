<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid d-flex justify-content-between">
    <%= link_to 'Loja do Clube', root_path, class: 'navbar-brand' %>
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Categorias de Produtos
        </a>
        <ul class="dropdown-menu">
          <% @product_categories_navbar.each do |pc| %>
            <% if !pc.subcategories.any? %>
              <% if pc.type == 'ProductCategory' %>
                <li><%= link_to(pc.name, search_product_categories_path(products: pc.id), class: "dropdown-item")%></li>
              <% end %>
            <% else %>
              <li>
                <%= link_to("#{pc.name} &raquo;".html_safe, search_product_categories_path(products: pc.id), class: "dropdown-item")%>
                <ul class="dropdown-menu dropdown-submenu">
                  <% pc.subcategories.each do |sub| %>
                    <% if sub.active? %>
                      <li><%= link_to(sub.name, search_product_categories_path(products: sub.id), class: "dropdown-item")%></li>
                    <% end %>
                  <% end %>
                </ul>
              </li>
            <% end %>
          <% end %>
            <li><%= link_to 'Todos os produtos', root_path, class: "dropdown-item" %></li>
        </ul>
      </li>
    </ul>
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      <li>
