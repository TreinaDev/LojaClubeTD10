
<div class="container">
  <%= form_with model: @product_subcategory, data: { turbo: false } do |f| %>
    <%= render partial: 'form_errors', locals: { object: @product_subcategory } %>
    
    <div class="form-group mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-2' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :parent_id %>
      <%= f.collection_select :parent_id, @categories, :id, :name, {}, { class: 'form-control mb-2' } %>
    </div>

    <%= f.submit t("#{controller_name}.#{action_name}.form.submit_text"), class: 'btn btn-secondary mt-2' %>
  <% end %>
</div>
