<div class="m-3">
  <div class="m-lg-3 p-3 border shadow">
    <h2 class="mb-4 text-center">Número do Pedido: <%= @order.id %></h2>
    <h3>Data do Pedido: <%= I18n.l(@order.created_at.to_date) %></h3>
    <h3>Status do Pedido: Aguardando aprovação</h3>
    <table class="table table-striped table-hover mt-4 ">
      <thead>
        <tr class="text-center">
          <th>Produto</th>
          <th>Código</th>
          <th>Preço</th>
          <th>Desconto</th>
          <th>Subtotal</th>
          <th>Quantidade</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @order.order_items.each do |oi| %>
          <% product = oi.product %>
          <tr class="text-center">
            <td><%= product.name %></td>
            <td><%= product.code %></td>
            <td><%= product.price.round %> Pontos</td>
            <td>0</td>
            <td><%= product.price.round * oi.quantity %> Pontos</td>
            <td><%= oi.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table table-striped table-hover mt-4 ">
      <thead>
        <tr class="text-center">
          <th>Subtotal</th>
          <th>Desconto</th>
          <th>Total do Pedido</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
          <tr class="text-center">
            <td><%= @order.subtotal_price %> Pontos</td>
            <td><%= @order.discount_amount %> Pontos</td>
            <td><%= @order.subtotal_price - @order.discount_amount %> Pontos</td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
