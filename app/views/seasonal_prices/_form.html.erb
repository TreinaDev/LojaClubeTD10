<%= form_with model: seasonal_price, data: { turbo: false } do |f| %>
  <%= render partial: 'form_errors', locals: { object: seasonal_price } %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <div class="mb-3">
    <%= f.label :value %>
    <%= f.number_field :value, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: 'form-control'  %>
  </div>

  <div class="mb-3">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: 'form-control'  %>
  </div>

  <div class="mb-3">
    <%= f.submit t("#{controller_name}.#{action_name}.form.submit_text"), class: 'btn btn-primary mt-2' %>
  </div>
<% end %>
